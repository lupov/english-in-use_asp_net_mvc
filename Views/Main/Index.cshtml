@{
    //    ViewBag.Title = ViewBag.RND;
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model bool
}
<div>
    @using (Html.BeginForm("Index", "Main", FormMethod.Get))
    {
        <input type=RADIO name="dir" value="EnRu" checked> @:Текст произносится на английском языке, затем (после паузы) на русском<br>
        <input type=RADIO name="dir" value="RuEn"> @:Текст произносится на русском языке, затем (после паузы) на английском языке<br>
        <input type=RADIO name="dir" value="En"> @:Текст произносится только на английском языке<br><br>
        <input type=CHECKBOX name="Period" value="Slow"> @:Увеличить паузу<br><br>


        <input type="submit" name="startBtn" value="Пуск" style="font-size: 14pt; width: 100px; height: 50px; border-radius: 10px; background-color:rgb(221, 221, 221); box-shadow: 1px 1px 2px rgba(0,0,0,0.5);" />
    }
</div>
@if (@Model)
{
    @Html.Action("PartialIndex")
}

<div style="position:relative; top:20px;">
    <table border=1>
        <tr><td style="width:230px; padding:0 5px;">Основная форма</td><td style="width: 230px; padding:0 5px;">Прошедшее время</td><td style="width: 380px; padding: 0 5px;">Перевод</td><td></td></tr>
        @foreach (English_in_Use.Models.Phrases.VerbComponents verb in ViewBag.Verbs.verbs)
        {
            string[] wordsPres = verb.verbPresent.Split('[');
            string[] wordsPost = @verb.verbPast.Split('[');
            <tr>
                <td style="padding:0 5px;">
                    <b>@wordsPres[0]</b>
                    @if (wordsPres.Length > 1)
                    {
                        @: [@wordsPres[1];
                    }
                </td>
                <td style="padding:0 5px;">
                    <b>
                        @wordsPost[0]
                    </b>
                    @if (wordsPost.Length > 1)
                    {
                        @: [@wordsPost[1];
                    }
                </td>
                <td style="padding:0 5px;"><b>@verb.verbRus</b></td>
                <td><input type=CHECKBOX checked></td>
            </tr>
        }
    </table>
</div>
</body>
</html>
